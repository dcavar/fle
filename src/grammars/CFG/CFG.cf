comment "#" ;
--comment "/*" "*/" ;

Gram.  Grammer ::= [Rule] ;
Rul.   Rule    ::= LHS "-->" [RHS] ;

LhsS.     LHS ::= Ident ;

Symb.     SYM ::= Ident ;
SymbPlus. SYM ::= Ident "+" ;
SymbAst.  SYM ::= Ident "*" ;
SymbOpt.  SYM ::= Ident "?" ;
Term.     T ::= String ;
TermPlus. T ::= String "+" ;
TermAst.  T ::= String "*" ;
TermOpt.  T ::= String "?" ;

RhsS.   RHS ::= SYM ;
RhsSR.  RHS ::= SYM [RHS] ;
RhsT.   RHS ::= T ;
RhsTR.  RHS ::= T [RHS] ;
RhsBr.  RHS ::= "(" [RHS] ")" ;
RhsBrPlus.  RHS ::= "(" [RHS] ")" "+" ;
RhsBrAst.  RHS ::= "(" [RHS] ")" "*" ;
RhsBrOpt.  RHS ::= "(" [RHS] ")" "?" ;

separator  RHS "" ;
separator Rule "\\n" ;

